$ cd blank

$ echo "[note]\n filename = '\{{slug title}} - \{{date now \"long\"}}'" > .zk/config.toml

# The default language is `en`.
# Note the & converted to `and` in the slug.
$ zk new --title "Foo \& Bar" --date "Jan 2" --dry-run
2>{{working-dir}}/foo-and-bar - January 02, 2022.md

# Set a custom language.
# Note the & converted to `et` in the slug.
$ echo "language = 'fr'" >> .zk/config.toml
$ zk new --title "Ceci \& cela" --date "Jan 2" --dry-run
2>{{working-dir}}/ceci-et-cela - January 02, 2022.md

